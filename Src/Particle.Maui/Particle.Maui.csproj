<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <LangVersion>10</LangVersion>
    <PackageId>Particle.Maui</PackageId>
    <PackageVersion>1.0</PackageVersion>
    <Authors>Jeff Bowman</Authors>
    <Copyright>2022</Copyright>
    <Owners>Jeff Bowman</Owners>
    <PackageProjectUrl>https://github.com/jbowman1107p/Particle.Maui</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReleaseNotes>See the API reference: https://github.com/mariusmuntean/Particle.Maui#api-reference</PackageReleaseNotes>
    <Summary>A MAUI library to display particles e.g. confetti. Should work on all platforms.</Summary>
    <PackageTags>MAUI Particles Confetti CustomControl</PackageTags>
    <Title>Particle.Maui</Title>
    <Description>MAUI library for displaying particles.
Supports confetti-like falling particles and radiating particles from touch input.
Can be extended with custom particle generators.</Description>
    <UseMaui>true</UseMaui>
    <TargetFrameworks>net6.0-android;net6.0-ios;net6.0-maccatalyst</TargetFrameworks>
    <OutputType>Library</OutputType>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="NuGet.Build.Packaging" Version="0.2.2">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.DotNet.UpgradeAssistant.Extensions.Default.Analyzers" Version="0.4.346202">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="SkiaSharp.Views.Maui.Controls" Version="2.88.0-preview.256" />
    <PackageReference Include="SkiaSharp.Views.Maui.Core" Version="2.88.0-preview.256" />
    <PackageReference Include="SkiaSharp.Views.Maui.Controls.Compatibility" Version="2.88.0-preview.256" />
  </ItemGroup>
</Project>